{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES2016","ES2015.Iterable"],
    "declaration": true,
    "outDir": "./dist",
    "newLine": "lf",
    "declarationDir": "./dist/typings",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
